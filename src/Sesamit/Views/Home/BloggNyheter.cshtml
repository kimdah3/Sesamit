@model Sesamit.Models.HomeViewModels.NyheterBloggViewModel

@{
    ViewData["Title"] = "Blogg";
}
<header class="top-page-header text-center" id="blogg-nyheter-header">
    <div class="container">
        <i class="fa fa-newspaper-o fa-5x"></i>
        <h1>Blogg & Nyheter</h1>
    </div>
</header>
<section id="section-blogg">
    <div class="container">
        <div class="row">
            <div class="col-md-4 visible-xs visible-sm">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <i class="fa fa-facebook fa-1x pull-right"></i>
                        <h3 class="panel-title">Senaste från facebook</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row row-bottom-buffer">
                            <div style="width: 100%;" class="fb-page" data-href="https://www.facebook.com/Sesamit/" data-tabs="timeline" data-width="500" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true">
                                <blockquote cite="https://www.facebook.com/Sesamit/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/Sesamit/">Sesam</a></blockquote>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                @foreach (var bloggPost in Model.BloggPosts)
                {
                    var index = Model.BloggPosts.FindIndex(x => x == bloggPost);
                    var header = "";
                    <div class="panel panel-primary">
                        @if (index == 0)
                        {
                            <div class="panel-heading">
                                <i class="fa fa-newspaper-o fa-1x pull-right"></i>
                                <h3 class="panel-title">Senaste från bloggen</h3>
                            </div>
                        }
                        <div class="panel-body">
                            <h3>
                                @bloggPost.Title
                                <small>
                                    @bloggPost.TimePast.Days dagar, @bloggPost.TimePast.Hours timmar sedan.
                                    @*<span class="text-capitalize pull-right">Blogginlägg</span>*@
                                </small>
                            </h3>
                            <p>@Html.Raw(bloggPost.Description.ToString())</p>
                            @if (bloggPost.ImageLink != null)
                            {
                                <img class="img-responsive img-rounded center-block" src="@bloggPost.ImageLink.ToString()"/>
                            }
                            <h3>
                                <a class="btn btn-success" href="@bloggPost.Link">Läs mer här!</a>
                            </h3>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-4 visible-lg visible-md">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <i class="fa fa-facebook fa-1x pull-right"></i>
                        <h3 class="panel-title">Senaste från facebook</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row row-bottom-buffer">
                            <div style="width: 100%;" class="fb-page" data-href="https://www.facebook.com/Sesamit/" data-tabs="timeline" data-width="400" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true">
                                <blockquote cite="https://www.facebook.com/Sesamit/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/Sesamit/">Sesam</a></blockquote>
                            </div>
                        </div>
                        <div class="row">
                            <div style="width: 100%;" class="fb-page" data-href="https://www.facebook.com/sesamsfinansutskott/" data-tabs="timeline" data-width="400" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true">
                                <blockquote cite="https://www.facebook.com/sesamsfinansutskott/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/sesamsfinansutskott/">Sesams finansutskott</a></blockquote>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




</section>
