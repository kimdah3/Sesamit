@using System.Security.Policy
@using Microsoft.ApplicationInsights.Extensibility
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sesam</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="~/fontawesome/font-awesome.css" rel="stylesheet" />
        <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body>
    <div class="container menu-container">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="pull-left" href="#"><img class="sesamlogo" alt="Sesam logga" src="~/Images/sesamlogo-medium.png" /></a>
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand">Sesam</a>
                    @*<a class="navbar-brand" href="#">Sesam</a>*@
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a asp-controller="Home" asp-action="Intro">Introduktion</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Om sesam <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="OmSesam" asp-action="VadArSesam">Vad är sesam?</a></li>
                                <li><a asp-controller="OmSesam" asp-action="SesamLounge">Sesam Lounge</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a asp-controller="OmSesam" asp-action="Styrelsen">Styrelsen</a></li>
                                <li><a href="#">Utskott</a></li>
                                <li><a href="#">Sektionsmöten</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">CAMPUSMÄSSAN</a></li>
                                <li><a href="#">Kalender</a></li>
                            </ul>
                        </li>
                        <li><a href="#">Nyheter</a></li>
                        <li><a href="#">Företag</a></li>
                        <li><a href="#">Blogg</a></li>
                        <li><a href="" id="kontakt-button" data-toggle="modal" data-target="#kontaktModal">Kontakta oss</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="#">Logga in</a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    </div>
    @RenderBody()
    <footer class="footer">
        <div class="container">
            <div class="col-md-1 ">
                @*<img id="footer-logo" class="pull-right" src="~/Content/Images/sesamLogo-medium.png" />*@
            </div>
            <div class="col-md-3">
                <div class="footer-contact">
                    <div>
                        <i class="fa fa-map-marker"></i>
                        <p>
                            <span>
                                Studentsektionen-Sesam
                            </span>
                            <span>
                                Fakultetsgatan 1
                            </span>
                            <span>
                                70181 Örebro
                            </span>

                        </p>
                    </div>

                    <div>
                        <i class="fa fa-phone"></i>
                        <p>
                            073-772 88 22
                        </p>
                    </div>

                    <div>
                        <i class="fa fa-envelope"></i>
                        <p>
                            <a href="mailto:info@sesamit.se">
                                info@sesamit.se
                            </a>
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="footer-samarbet text-center">
                    <img id="footer-samarbets-pic" src="~/Images/sponsors.png" />
                </div>
            </div>

            <div class="col-md-3">

                <div class="footer-icons text-center">
                    <a class="btn btn-footer" href=""><i class="fa fa-facebook fa-5x" aria-hidden="true"></i></a>
                    <a class="btn btn-footer" href=""><i class="fa fa-instagram fa-5x" aria-hidden="true"></i></a>
                </div>

            </div>
            <div class="col-md-1"></div>
        </div>
    </footer>

    <!-- Modal -->
    <div class="modal fade bs-example-modal-lg" id="kontaktModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Kontakta oss</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div id="kontakt-map">as</div>
                        <div id="capture"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Stäng</button>
                </div>
            </div>
        </div>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCtXwSw2mG7B4x-Y_-LGj4_DbHyzb_amno&callback=initMap"
                async defer></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
