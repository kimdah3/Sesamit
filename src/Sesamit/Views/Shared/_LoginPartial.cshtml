@using Microsoft.AspNetCore.Identity
@using Sesamit.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("Admin"))
    {
        <ul class="nav navbar-nav navbar-right">

            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>
                        <a asp-area="" asp-controller="Sponsors" asp-action="Index" title="Manage">Sponsorer</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="NewsPosts" asp-action="Index" title="Manage">Nyhetsinlägg</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Account</a>
                    </li>
                    <li id="logout-button">
                        <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="">
                            <button type="submit" class="btn-link">Log off</button>
                        </form>
                    </li>
                </ul>
            </li>
        </ul>
    }
}
